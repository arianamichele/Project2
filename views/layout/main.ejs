<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <title><%= typeof title != 'undefined'? `Recipe Blog - ${title}` : "Cooking Recipe Blog" %></title>
    <link rel="icon" type="image/x-icon">
</head>
<body>
    <div class="container mainbody">
<!-- NavBar -->
    <nav class="py-2 bg-light border-bottom">
        <div class="container d-flex flex-wrap">
        <ul class="nav me-auto">
            <li class="nav-item"><a href="/" class="nav-link link-dark px-2 active" aria-current="page">Home</a></li>
            <li class="nav-item"><a href="/#categories" class="nav-link link-dark px-2">Categories</a></li>
            <li class="nav-item"><a href="/submit-recipe" class="nav-link link-danger px-2">Submit Your Recipe</a></li>

        </ul>
        <ul class="nav">
            <% if (currentUser) { %>
                <li class="nav-item"><a href="/dashboard" class="nav-link link-dark px-2">DashBoard</a></li>
                <li class="nav-item">
                    <form action="/logout?_method=DELETE" method="post">
                        <button type="submit" class="nav-link btn btn-link link-dark px-2">Logout</button>
                    </form>
                </li>
            <% } else { %>
                <li class="nav-item"><a href="/login" class="nav-link link-dark px-2">Login</a></li>
                <li class="nav-item"><a href="/register" class="nav-link link-dark px-2">Sign up</a></li>
            <% } %>
        </ul>
        </div>
    </nav>

    <!-- Header -->
    <header class="py-3 border-bottom">
        <div class="container d-flex flex-wrap justify-content-center">
        <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
        <span class="fs-4">RECIPE BLOG</span>
        </a>
        <form action="/search" method="post" class="col-12 col-lg-auto mb-3 mb-lg-0">
            <input type="search" name="searchtext" class="form-control" placeholder="Search..." aria-label="Search">
        </form>
        </div>
    </header>

    <main>
        <%- body -%>
    </main>



    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>