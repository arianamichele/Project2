<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/hero-image.jpeg" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Recipe Blog">
    </div>

    <div class="col-12 col-lg-6">

        <h1 class="display-5 fw-bold mb-3">Share your food with the world!</h1>
        <p class="lead">Explore authentic family recipes locally and globally. Share your home's favorite and explore others!</p>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Lastest</a>
            <a href="/random-recipe" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
        </div>
    </div>


      <!-- Categories -->
    <section class="pb-4 pt-4" id="categories">
    <div class="d-flex mb-2 align-items-center">
      <h3>Categories</h3>
      <a href="/categories" class="ms-auto text-deco">View More</a>
    </div>
  
    <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  
      <% if(categories != '') { %>
        <% categories.forEach(category => { %>
          <div class="col text-center category__link">
            <a href="/categories/<%- category.strCategory %>" class="text-deco">
              <div class="category__img shadow">
                <img src="<%= category.strCategoryThumb %>" alt="<%= category.strCategory %>">
              </div>
              <div class="pt-1"><b><%= category.strCategory %></b></div>
            </a>
          </div>
        <% }) %>
      <% } %>
    </div>
  
  </section>
  
  
    <!-- Users Posts -->
  <div class="categories">
  <h3>Categories</h3>
  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  
  
    <% if(categories != '') { %>
      <% categories.slice(7,13).forEach(category => { %>
        <div class="col text-center category__link">
          <a href="/categories/<%- category.name %>" class="text-deco">
            <div class="category__img shadow">
              <img src="<%= category.strCategoryThumb %>" alt="<% category.strCategory %>">
            </div>
            <div class="pt-1"><b><%= category.strCategory %></b></div>
          </a>
        </div>
      <% }) %>
    <% } %>
    </div>
  
  
  <!-- Submit Receipe -->
  <section class="px-4 py-5 my-5 text-center">
    <img src="/img/cookbook-bg.png" class="d-block mx-auto" alt="Publish your recipe for FREE today" width="360" height="300" loading="lazy">
    <h1 class="display-5 fw-bold">Publish your recipe for FREE today</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Publish your Recipe in front of thousands of people for free.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a href="/submit-recipe" class="btn btn-primary btn-dark btn-lg">Submit Recipe</a>
      </div>
    </div>
  </section>
